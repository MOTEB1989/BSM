NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# OpenAI / model providers
OPENAI_BSU_KEY=
OPENAI_BRINDER_KEY=
OPENAI_LEXNEXUS_KEY=
OPENAI_MODEL=gpt-4o-mini

# Admin
ADMIN_TOKEN=change-me

# CORS (comma-separated origins, add your frontend domain)
CORS_ORIGINS=https://www.lexdo.uk,https://lexdo.uk

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Agent input limits
MAX_AGENT_INPUT_LENGTH=4000

# ORBIT Self-Healing Agent (optional - configured via GitHub Secrets)
# These are managed by scripts/bootstrap-orbit.sh and stored in GitHub Secrets
# Only needed for local ORBIT development/testing
# ORBIT_GITHUB_TOKEN=
# TELEGRAM_BOT_TOKEN=
# ORBIT_ADMIN_CHAT_IDS=
# CF_ACCOUNT_ID=
# CF_ZONE_ID=
# CF_PROJECT_NAME=orbit-workers
