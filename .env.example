NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# OpenAI / model providers
OPENAI_BSM_KEY=
OPENAI_BRINDER_KEY=
OPENAI_LEXNEXUS_KEY=
OPENAI_MODEL=gpt-4o-mini

# Admin
ADMIN_TOKEN=change-me

# CORS (comma-separated origins, add your frontend domain)
CORS_ORIGINS=https://www.lexdo.uk,https://lexdo.uk

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Agent input limits
MAX_AGENT_INPUT_LENGTH=4000
