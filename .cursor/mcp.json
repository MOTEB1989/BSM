{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/mcp.schema.json",
  "mcpServers": {
    "lexbank-unified": {
      "command": "node",
      "args": ["./mcp-servers/bsu-agent-server.js"],
      "env": {
        "BSM_API_URL": "https://sr-bsm.onrender.com/api",
        "NODE_ENV": "production"
      }
    },
    "bsm-banking-agents": {
      "command": "node",
      "args": ["./mcp-servers/banking-hub.js"],
      "env": {
        "BSM_API_URL": "https://sr-bsm.onrender.com/api",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}
