# FastAPI Configuration
SERVICE_NAME=rag-service
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Vector Database Configuration
VECTOR_DB_TYPE=pinecone  # Options: pinecone, pgvector
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=banking-docs

# PostgreSQL + pgvector Configuration (alternative to Pinecone)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=banking_kb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Document Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOC=500

# Security
ADMIN_TOKEN=change-me-in-production
ALLOWED_ORIGINS=http://localhost:3000,https://www.lexdo.uk

# Storage
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
