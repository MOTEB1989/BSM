{
  "mcpServers": {
    "lexbank-unified": {
      "command": "node",
      "args": [
        "mcp-servers/bsu-agent-server.js"
      ],
      "env": {
        "BSM_API_URL": "https://sr-bsm.onrender.com/api",
        "NODE_ENV": "production"
      },
      "metadata": {
        "name": "LexBANK/BSU Unified Agent Server",
        "version": "2.0.0",
        "description": "Unified MCP server for LexBANK/BSU AI agents with GitHub Copilot integration",
        "capabilities": [
          "chat",
          "agents",
          "knowledge",
          "orchestrator"
        ],
        "endpoints": {
          "backend": "https://sr-bsm.onrender.com",
          "frontend": "https://moteb1989.github.io/BSM",
          "chat": "https://lexprim.com",
          "corehub": "https://corehub.nexus",
          "cloudflarePages": "https://9e71cbf3.lexbank.pages.dev"
        }
      }
    },
    "browser-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "browser-devtools-mcp"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "metadata": {
        "name": "Browser DevTools MCP",
        "version": "0.2.23",
        "description": "Browser DevTools integration for debugging and development",
        "capabilities": [
          "browser-automation",
          "debugging",
          "network-inspection",
          "console-access"
        ]
      }
    },
    "github-mcp": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server:latest"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_BSU_TOKEN}"
      },
      "metadata": {
        "name": "GitHub MCP Server",
        "version": "2.0.0",
        "description": "Official GitHub MCP server for comprehensive repository and Git management",
        "capabilities": [
          "git-operations",
          "github-api",
          "repository-management",
          "workflow-automation",
          "pr-management",
          "issue-tracking",
          "ci-cd-integration"
        ],
        "documentation": "https://github.com/github/github-mcp-server"
      }
    },
    "github-mcp-go": {
      "command": "go",
      "args": [
        "run",
        "github.com/github/github-mcp-server/cmd/github-mcp-server@latest",
        "stdio",
        "--dynamic-toolsets"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_BSU_TOKEN}",
        "HOME": "${HOME}"
      },
      "metadata": {
        "name": "GitHub MCP Server (Go)",
        "version": "2.0.0",
        "description": "GitHub MCP server via Go runtime (no Docker required)",
        "note": "Use this if Docker is not available"
      }
    }
  }
}
